<div class="content-wrapper">
  <div class="col-md-6 margin_form">
    <div class="box box-info">
      <div class="box-header with-border">
        <h3 class="box-title">Crear cuenta</h3>
      </div>
      <div class="form-horizontal">
        <div class="box-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group">
            <label class="col-sm-2 control-label">Nombre</label>
            <div class="col-sm-10">
              <%= f.text_field :name ,class: 'form-control', placeholder: 'Nombre' %>
              </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Alias</label>
            <div class="col-sm-10">
              <%= f.text_field :alias ,class: 'form-control', placeholder: 'Alias' %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
              <%= f.email_field :email , autocomplete: "email",class: 'form-control', placeholder: 'Correo electrónico' %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Password</label>
            <% if @minimum_password_length %><em>Minimo 6 caracteres</em><% end %><br />
            <div class="col-sm-10">
              <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder: 'Contraseña' %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-4 control-label">Tipo de cuenta</label>
            <div class="col-sm-6">
              <%= f.collection_select :type_id, @types, :id, :user_type, prompt: false, class:"form-control" %>  
            </div>
          </div>
        </div>
        <div class="box-footer">
          <%= f.submit "Crear cuenta", class: "btn btn-info" %>
        </div>
        <%end%>
      </div>
    </div>
  </div>
</div>