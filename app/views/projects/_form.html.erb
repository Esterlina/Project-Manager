<div class="content-wrapper" >
  <div class="col-md-6 margin_form">
    <div class="box box-info">
      <div class="form-horizontal">
        <div class="box-body">
          <%= form_for(@project) do |f| %>
          <div class="form-group">
            <label class="col-sm-2 control-label">Nombre</label>
            <div class="col-sm-10">
              <%= f.text_field :name ,class: 'form-control'%>
              </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Clave</label>
            <div class="col-sm-10">
              <%= f.text_field :code ,class: 'form-control'%>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Detalles del proyecto</label>
            <div class="col-sm-10">
              <%= f.text_area :detail, :rows => "2",class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
          	<label class="col-sm-2 control-label">Equipo de trabajo</label>
          	<div class="col-sm-10">
          		<%= select_tag "project[user_id]", options_from_collection_for_select(@people, "id", "name", @project.get_users_ids), multiple: true, size:3, class: 'form-control'%>
          	</div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Servicios</label>
            <div class="col-sm-5">
              <%= select_tag "project[service_id]", options_from_collection_for_select(@services, "id", "name",@project.get_services_ids), multiple: true, size:4, class: 'form-control'%>
            </div>
            <label class="col-sm-2 control-label">Cantidad de sprints</label>
            <div class="col-sm-2">
              <%= f.number_field  :number_sprints, min:0, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Inicio</label>
            <div class="col-sm-3">
              <div class="input-group date">
                   <%= f.date_field :starting_date, class:"form-control" %>
                </div>
            </div> 
            <label class="col-sm-2 control-label">Fin</label>
            <div class="col-sm-3">
              <div class="input-group date">
                   <%= f.date_field :ending_date, class:"form-control" %>
                </div>
            </div>       
          </div>
        </div>
        <div class="box-footer">
          <%= f.submit button, class: "btn btn-success" %>
        </div>
        <%end%>
      </div>
    </div>
  </div>
</div>