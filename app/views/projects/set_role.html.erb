<div class="content-wrapper" >
  <div class="col-md-6 margin_form">
    <div class="box box-info">
      <div class="form-horizontal">
        <div class="box-body">
          <%= form_for(@project, url: project_update_role_path, method: :post) do |f| %>
          <div class="form-group">
            <p class="col-sm-6 control-label">Asignar rol a <b><%=@user.name%></b></p>
            <div class="col-sm-6">
            	<%= hidden_field_tag "project[user_id]", @user.id %>
            	<%=select_tag "project[role_id]", options_for_select(@roles.map { |obj| [obj['name'], obj['id']] }) %>
              </div>
          </div>
        </div>
        <div class="box-footer">
          <%= f.submit "guardar", class: "btn btn-success" %>
        </div>
        <%end%>
      </div>
    </div>
  </div>
</div>